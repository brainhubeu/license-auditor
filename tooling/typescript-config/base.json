{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@tsconfig/recommended/tsconfig.json",
  "display": "Default",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "incremental": false,
    "isolatedModules": true,
    "lib": ["es2022", "DOM", "DOM.Iterable"],
    "noUncheckedIndexedAccess": true,
    "resolveJsonModule": true
  }
}
