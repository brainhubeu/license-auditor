  },
  "devDependencies": {
    "@sindresorhus/tsconfig": "3.0.1",
    "@types/react": "18.3.11",
    "ava": "5.2.0",
    "chalk": "5.2.0",
    "ink-testing-library": "3.0.0",
    "ts-node": "10.9.1",
    "tsx": "4.19.1",
    "typescript": "5.0.3"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": ["--loader=ts-node/esm"]
