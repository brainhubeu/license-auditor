  },
  "dependencies": {
    "@license-auditor/data": "*",
    "@total-typescript/ts-reset": "0.6.1",
    "detect-package-manager": "3.0.2",
    "fast-glob": "3.3.2",
    "spdx-expression-parse": "4.0.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@license-auditor/typescript-config": "*",
    "tsup": "8.3.5",
    "@types/spdx-expression-parse": "3.0.5",
    "@vitest/coverage-v8": "2.1.5",
    "tsx": "4.19.1",
    "typescript": "5.6.2",
    "vitest": "2.1.5"
  }
