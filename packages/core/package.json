{
  "name": "@brainhubeu/license-auditor-core",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.mjs"
    }
  },
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && npm run rename:esm",
    "rename:esm": "node ../../scripts/fix-mjs.js",
    "clean": "rimraf dist && rimraf *.tsbuildinfo",
    "start": "tsx src/audit-licenses.ts",
    "typecheck": "tsc --noEmit true -p tsconfig.esm.json"
  },
  "dependencies": {
    "@license-auditor/data": "*",
    "@license-auditor/package-manager-finder": "*",
    "fast-glob": "3.3.2",
    "zod": "3.23.8",
    "rimraf": "6.0.1"
  },
  "devDependencies": {
    "@license-auditor/typescript-config": "*",
    "tsx": "4.19.1",
    "typescript": "5.6.2"
  },
  "typescript.tsconfig": "./tsconfig.esm.json"
}
