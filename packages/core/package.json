{
  "name": "@brainhubeu/license-auditor-core",
  "version": "0.0.1",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup-node",
    "dev": "tsc --watch",
